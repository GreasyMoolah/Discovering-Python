nums = [12,16,18,20,25]

for num in nums:

    if num % 5 ==0:
        print(num)
#------
#20
#25


nums = [12,16,18,20,25]

for num in nums:

    if num % 5 ==0:
        print(num)
        break
#------
#20

nums = [10,16,18,20,25]

for num in nums:

    if num % 5 ==0:
        print(num)
        break
#------
#10


nums = [12,16,18,21,26]

for num in nums:

    if num % 5 ==0:
        print(num)
        break
    else:
        print("not found")
#------
#not found
#not found
#not found
