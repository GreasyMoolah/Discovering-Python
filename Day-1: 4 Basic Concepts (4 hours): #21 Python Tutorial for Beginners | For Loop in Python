for i in range(5):

    if i==3:
        continue
    print("Hello", i)
#------
#Hello 0
#Hello 1
#Hello 2
#Hello 4



for i in range(5):

    if i==3:
        break
    print("Hello", i)
#------
#Hello 0
#Hello 1
#Hello 2


