nums = [12,16,18,21,26]

for num in nums:

    if num % 5 ==0:
        print(num)
        break
else:
        print("not found")
#------
#not found


nums = [10,16,18,21,26]

for num in nums:

    if num % 5 ==0:
        print(num)
        break       #break is cumpolsary, 'not found' will print without it

else:
        print("not found")
#------
#10

