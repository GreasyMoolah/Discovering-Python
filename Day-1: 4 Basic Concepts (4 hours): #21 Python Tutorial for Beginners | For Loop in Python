av = 5

x = int(input("How many Candies you want?"))

i = 1
while i<= x:

    if i>av:
        print("Out of stock")
        break


    print("Candy")
    i+=1


print("Bye")
#------
#How many Candies you want?6
#Candy
#Candy
#Candy
#Candy
#Candy
#Bye




av = 5

x = int(input("How many Candies you want?"))

i = 1
while i<= x:

    if i>av:
        print("Out of stock")
        break         # break


    print("Candy")
    i+=1


print("Bye")
#------
#How many Candies you want?8
#Candy
#Candy
#Candy
#Candy
#Candy
#Out of stock
#Bye


for i in range(1,101):

    if i%3==0:
        continue

    print(i)


print("Bye")
#------
